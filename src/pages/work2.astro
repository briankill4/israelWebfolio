---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/HeaderPages.astro';
import Footer from '../components/footer.astro';
---
<BaseLayout title="Israel Paucar | WORK" description="Portfolio interactivo de Israel Paucar, artista VFX. Houdini artist, creative coding">

    <main class="grid grid-cols-4 gap-4 max-w-7xl mx-auto">
      <!-- Top Bar -->
      <section class="col-span-4 h-24 bg-blue-300 border border-black">
          <div class=" mx-auto flex items-center justify-center text-text dark:text-lgt font-[600] h-[7vh] w-full overflow-hidden mb-4 mt-10">
    <span class="text-[3vh] font-[800] leading-none">Timeline
    <span class="cursor">_</span>
    </span>
          <style>
          .titulo {
            font-size: 2.5rem;
            font-weight: bold;
            font-family: monospace;
          }
          .cursor {
            animation: blink 1s steps(1) infinite;
          }
          @keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0; }
          }
        </style>
  </div>

      </section>

      <!-- Main Area (Left side) -->
      <section class="col-span-3 grid grid-rows-2 gap-4">
        <div class="bg-blue-300 h-full border border-black"></div>
        <div class="bg-blue-300 h-full border border-black"></div>
      </section>

      <!-- Sidebar (Right side) -->
      <aside class="col-span-1 grid grid-rows-[1fr_auto_1fr] gap-2">
        <div class="bg-blue-300 border border-black"></div>
        <div class="bg-blue-300 h-12 border border-black"></div>
        <div class="bg-blue-300 border border-black"></div>
      </aside>
    </main>

</BaseLayout>